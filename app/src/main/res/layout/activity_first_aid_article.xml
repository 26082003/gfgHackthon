<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".FirstAidArticle">

    <LinearLayout
        android:id="@+id/conTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal"
        android:translationY="25dp">

        <LinearLayout
            android:id="@+id/backBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/round_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:tooltipText="Back">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:translationX="-2dp"
                app:srcCompat="@drawable/ic_back" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/soundBtn"
            android:layout_width="50dp"
            android:visibility="gone"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:tooltipText="Text to Speech">

            <ImageView
                android:id="@+id/imageView55"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_sound" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/webBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:tooltipText="Useful Website">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_link" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ytBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/round_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:tooltipText="Tutorial">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="18dp"
                android:layout_height="18dp"

                app:srcCompat="@drawable/ic_video" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/top_gredient_items"
        android:orientation="horizontal"
        android:translationY="25dp"
        android:translationZ="1dp"></LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/conMid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/light_blue"
                    app:cardBackgroundColor="@color/light_blue"
                    app:cardCornerRadius="16dip"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/asthma" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp"

                    android:background="@drawable/bg_item"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/titleTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/black"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="Ashthma Attack"
                            android:textColor="@color/text_primary"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:id="@+id/soundBtndes"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/round_bg"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:tooltipText="Text to Speech">

                            <ImageView

                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/ic_sound" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_running"
                            app:srcCompat="@drawable/ic_running" />

                        <TextView
                            android:id="@+id/effectedPartTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/regular"
                            android:lines="1"
                            android:text="Lungs"
                            android:textColor="@color/text_primary"
                            android:textSize="13dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular_e"

                            android:text="•"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/typeTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/regular"
                            android:lines="1"
                            android:text="Major"
                            android:textSize="13dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/descriptionTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/regular_e"
                        android:text="During an asthma attack, the airways in the lungs become narrow, making it difficult to breathe. It is often accompanied by wheezing, coughing, and a feeling of tightness in the chest."
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/bg_item"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/what1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"

                            android:layout_weight="1"
                            android:fontFamily="@font/black"
                            android:gravity="center_vertical"
                            android:text="✔️ What to do ?"
                            android:textColor="@color/text_primary"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:id="@+id/soundBtndo"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/round_bg"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:tooltipText="Text to Speech">

                            <ImageView

                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/ic_sound" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/doTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/regular_e"
                        android:text="During an asthma attack, the airways in the lungs become narrow, making it difficult to breathe. It is often accompanied by wheezing, coughing, and a feeling of tightness in the chest."
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="60dp"
                    android:background="@drawable/bg_item"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:layout_marginTop="25dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/what2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/black"
                            android:gravity="center_vertical"
                            android:text="❌ What not to do ?"
                            android:textColor="@color/text_primary"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:id="@+id/soundBtndont"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/round_bg"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:tooltipText="Text to Speech">

                            <ImageView

                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/ic_sound" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/dontTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/regular_e"
                        android:text="During an asthma attack, the airways in the lungs become narrow, making it difficult to breathe. It is often accompanied by wheezing, coughing, and a feeling of tightness in the chest."
                        android:textSize="16dp" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/top_gredient_items"
        android:orientation="horizontal"
        android:rotation="180"
        android:translationY="-60dp"
        android:translationZ="1dp"></LinearLayout>

</LinearLayout>