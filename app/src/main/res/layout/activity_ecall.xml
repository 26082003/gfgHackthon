<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ECall">


    <LinearLayout
        android:id="@+id/bg_"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gredient_list"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top_bg"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/top_in_con"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="45dp"
                android:layout_marginRight="28dp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/headTxt"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/bold"
                    android:gravity="left"
                    android:text="Emergency Call"
                    android:textColor="@color/text_primary"
                    android:textSize="22dp" />

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/mid_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="28dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ifAdded_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <LinearLayout
                            android:id="@+id/conOneStep"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/leftCon"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/con_round1"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:background="@drawable/round_bg"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/bold"
                                        android:text="1"

                                        android:textSize="20dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/line_1"
                                    android:translationZ="-1dp"
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@color/light_blue"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/rightCon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:id="@+id/context1"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/meduim"
                                        android:text="Floating Button"

                                        android:textSize="16dp" />

                                </LinearLayout>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardView1"
                                    android:layout_width="200dp"
                                    android:layout_height="110dp"
                                    android:background="@color/light_blue"
                                    app:cardBackgroundColor="@color/light_blue"
                                    app:cardCornerRadius="16dip"
                                    app:cardElevation="0dp"
                                    app:cardMaxElevation="0dp">

                                    <ImageView
                                        android:id="@+id/imageView8"
                                        android:layout_width="wrap_content"
                                        android:layout_height="80dp"
                                        android:layout_gravity="center"
                                        app:srcCompat="@drawable/call_png" />

                                </androidx.cardview.widget.CardView>


                                <TextView
                                    android:id="@+id/des1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="40dp"
                                    android:fontFamily="@font/regular_e"
                                    android:text="• Even when the app is closed, \nyou can call the person near you by pressing the floating button\n• Press the red color cross button to close the floating window."
                                    android:textColor="@color/text_primary"
                                    android:textSize="14dp" />


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/conOneStep2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/leftCon2"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/con_round2"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:background="@drawable/round_bg"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/bold"
                                        android:text="2"

                                        android:textSize="20dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="2dp"
                                    android:id="@+id/line_2"
                                    android:translationZ="-1dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@color/light_blue"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/rightCon2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:id="@+id/context2"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/meduim"
                                        android:text="Power Button"

                                        android:textSize="16dp" />

                                </LinearLayout>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardView2"
                                    android:layout_width="200dp"
                                    android:layout_height="110dp"
                                    android:background="@color/light_blue"
                                    app:cardBackgroundColor="@color/light_blue"
                                    app:cardCornerRadius="16dip"
                                    app:cardElevation="0dp"
                                    app:cardMaxElevation="0dp">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="80dp"
                                        android:layout_gravity="center"
                                        app:srcCompat="@drawable/hand_png" />

                                </androidx.cardview.widget.CardView>


                                <TextView
                                    android:id="@+id/des2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="40dp"
                                    android:fontFamily="@font/regular_e"
                                    android:text="• Open this app and then press power button.\n• It automatically calls each time you push the power key."
                                    android:textColor="@color/text_primary"
                                    android:textSize="14dp" />


                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/con_details"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_marginBottom="80dp"
                            android:background="@drawable/light_blue_bg"
                            android:orientation="vertical"
                            android:paddingLeft="16dp"
                            android:paddingTop="20dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="20dp">

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/meduim"
                                android:gravity="left"
                                android:text="Deatils about a person near you"
                                android:textAllCaps="false"
                                android:textColor="@color/text_primary" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:id="@+id/NameBg2"
                                    android:layout_width="match_parent"
                                    android:layout_height="55dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/cud_noti"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView132"
                                        android:layout_width="23dp"
                                        android:layout_height="23dp"
                                        android:layout_marginLeft="20dp"
                                        app:srcCompat="@drawable/ic_user_icon" />

                                    <LinearLayout
                                        android:layout_width="1.5dp"
                                        android:layout_height="20dp"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginRight="15dp"
                                        android:background="@color/light_gray"
                                        android:orientation="vertical"></LinearLayout>

                                    <TextView
                                        android:id="@+id/setName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/regular"
                                        android:text="Name"
                                        android:textColor="@color/text_primary"
                                        android:textSize="13dp" />


                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/RelationBg2"
                                    android:layout_width="match_parent"
                                    android:layout_height="55dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/cud_noti"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView1632"
                                        android:layout_width="23dp"
                                        android:layout_height="23dp"
                                        android:layout_marginLeft="20dp"
                                        app:srcCompat="@drawable/ic_hand_heart" />

                                    <LinearLayout
                                        android:layout_width="1.5dp"
                                        android:layout_height="20dp"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginRight="15dp"
                                        android:background="@color/light_gray"
                                        android:orientation="vertical"></LinearLayout>

                                    <TextView
                                        android:id="@+id/setRelation"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/regular"
                                        android:text="Relation"
                                        android:textColor="@color/text_primary"
                                        android:textSize="13dp" />


                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/EcallBG2"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/cud_noti"

                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView162"
                                    android:layout_width="23dp"
                                    android:layout_height="23dp"
                                    android:layout_marginLeft="20dp"
                                    app:srcCompat="@drawable/ic_calling" />

                                <LinearLayout
                                    android:layout_width="1.5dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:background="@color/light_gray"
                                    android:orientation="vertical"></LinearLayout>

                                <TextView
                                    android:id="@+id/text912"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5sp"

                                    android:background="#ffffff"
                                    android:fontFamily="@font/regular"
                                    android:text="+91"
                                    android:textColor="@color/text_primary"
                                    android:textSize="13dp" />

                                <TextView
                                    android:id="@+id/setNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#ffffff"
                                    android:fontFamily="@font/regular"
                                    android:text="Number"
                                    android:textColor="@color/text_primary"
                                    android:textSize="13dp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:id="@+id/delete_con"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/cud_noti"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:outlineSpotShadowColor="@color/shadow_color">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/meduim"
                                        android:text="Edit"
                                        android:textColor="@color/Primary_box"
                                        android:textSize="14dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/call_con"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"

                                    android:layout_weight="3"
                                    android:background="@drawable/show_bg"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:outlineSpotShadowColor="@color/shadow_color">

                                    <ImageView
                                        android:id="@+id/imageView72"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:src="@drawable/ic_calling2" />
                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ifnotaddes_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:id="@+id/con_emeCall_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp">

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/meduim"
                                android:gravity="left"
                                android:text="Add the Contact of person near you"
                                android:textAllCaps="false"
                                android:textColor="@color/text_primary" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:id="@+id/NameBg"
                                    android:layout_width="match_parent"
                                    android:layout_height="55dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/cud_noti"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView13"
                                        android:layout_width="23dp"
                                        android:layout_height="23dp"
                                        android:layout_marginLeft="20dp"
                                        app:srcCompat="@drawable/ic_user_icon" />

                                    <LinearLayout
                                        android:layout_width="1.5dp"
                                        android:layout_height="20dp"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginRight="15dp"
                                        android:background="@color/light_gray"
                                        android:orientation="vertical"></LinearLayout>

                                    <EditText
                                        android:id="@+id/NameEdit"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="10sp"
                                        android:layout_weight="1"
                                        android:background="#ffffff"
                                        android:ems="10"
                                        android:fontFamily="@font/regular"
                                        android:hint="Name"
                                        android:inputType="textEmailAddress"
                                        android:nextFocusRight="@id/RelationEdit"
                                        android:textColor="@color/text_primary"
                                        android:textColorHint="@color/hintColor"
                                        android:textSize="14dp" />


                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/RelationBg"
                                    android:layout_width="match_parent"
                                    android:layout_height="55dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/cud_noti"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView163"
                                        android:layout_width="23dp"
                                        android:layout_height="23dp"
                                        android:layout_marginLeft="20dp"
                                        app:srcCompat="@drawable/ic_hand_heart" />

                                    <LinearLayout
                                        android:layout_width="1.5dp"
                                        android:layout_height="20dp"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginRight="15dp"
                                        android:background="@color/light_gray"
                                        android:orientation="vertical"></LinearLayout>

                                    <EditText
                                        android:id="@+id/RelationEdit"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="10sp"
                                        android:layout_weight="1"
                                        android:background="#ffffff"
                                        android:ems="10"
                                        android:fontFamily="@font/regular"
                                        android:hint="Relation"
                                        android:inputType="textEmailAddress"
                                        android:nextFocusDown="@id/EcallEdit"
                                        android:textColor="@color/text_primary"
                                        android:textColorHint="@color/hintColor"
                                        android:textSize="14dp" />


                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/EcallBG"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/cud_noti"

                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView16"
                                    android:layout_width="23dp"
                                    android:layout_height="23dp"
                                    android:layout_marginLeft="20dp"
                                    app:srcCompat="@drawable/ic_calling" />

                                <LinearLayout
                                    android:layout_width="1.5dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:background="@color/light_gray"
                                    android:orientation="vertical"></LinearLayout>

                                <TextView
                                    android:id="@+id/text91"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5sp"

                                    android:background="#ffffff"
                                    android:fontFamily="@font/regular"
                                    android:text="+91"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14dp" />

                                <EditText
                                    android:id="@+id/EcallEdit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10sp"
                                    android:layout_weight="1"
                                    android:background="#ffffff"
                                    android:ems="5"
                                    android:fontFamily="@font/regular"
                                    android:hint="Enter Mobile Number"
                                    android:inputType="number"
                                    android:textColor="@color/text_primary"
                                    android:textColorHint="@color/hintColor"
                                    android:textSize="14dp" />


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/grantPermissionBg"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/cud_noti"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:outlineSpotShadowColor="#8B96FF">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/meduim"
                                android:text="Grant Permission 1"
                                android:textColor="@color/Primary_box"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/grantPermission2Bg"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/cud_noti"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:outlineSpotShadowColor="#8B96FF">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/meduim"
                                android:text="Grant Permission 2"
                                android:textColor="@color/Primary_box"
                                android:textSize="16dp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/addNumBg"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="40dp"
                            android:background="@drawable/primary_color_bg"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:outlineSpotShadowColor="#8B96FF">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/meduim"
                                android:text="Add Number"
                                android:textColor="#FFFFFF"
                                android:textSize="16dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>